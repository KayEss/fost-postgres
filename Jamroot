path-constant TOP : . ;
include $(TOP)/../boost-version.jam ;

use-project fost-orm : ../fost-orm/ ;
include ../fost-base/fost.jam ;

fost-project fost-postgres :
        <include>../fost-orm/Cpp/include
        <include>../PostgreSQL/libpqxx/include

        <target-os>darwin:<include>/Library/PostgreSQL/8.4/include/
        <target-os>darwin:<library-path>/Library/PostgreSQL/8.4/lib/
        <target-os>darwin:<library-path>/Library/PostgreSQL/9.1/lib/
        <target-os>darwin:<library-path>/usr/local/pgsql/lib/

        <target-os>windows:<include>../PostgreSQL/libpqxx/config/sample-headers/libpq/8.3
        <target-os>windows:<include>../PostgreSQL/libpqxx/config/sample-headers/compiler/VisualC++.NET-2003
        <target-os>windows:<include>"C:/Program Files/PostgreSQL/8.3/include"
        <target-os>windows:<include>"C:/Program Files/PostgreSQL/9.3/include"
    ;


alias fost :
        ../fost-base//fost
        ../fost-orm//fost
        Cpp/fost-postgres
        Cpp/fost-pqxx
    ;

alias tests :
        ../fost-base//tests
        ../fost-orm//tests
        Cpp/fost-postgres-test
    ;
explicit tests ;

alias all :
        fost
        tests
    ;
explicit all ;
